  "dependencies": {
    "@as-pect/assembly": "^3.1.5",
    "@as-pect/core": "^3.1.5",
    "@assemblyscript/loader": "^0.9.4",
    "as-bignum": "^0.1.7"
  },
  "devDependencies": {
    "@as-pect/cli": "^3.1.5",
    "assemblyscript": "^0.9.4"
